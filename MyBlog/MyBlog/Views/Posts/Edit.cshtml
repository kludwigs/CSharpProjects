@model MyBlog.Models.Post

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>
<form action="@Href("~/Posts/Update")" method="post" id="postForm">
    @if (Model.ID != -1)
    {
        <input type="hidden" = name="id" value="@Model.ID" />
    }

            <input type="text" name="dateTime" value="@DateTime.Now" /> Date<br />
            <input type="text" name="title" value="@Model.Title" /> Title<br />
            <input type="text" name="tags" value="@ViewBag.Tags" /> Tags <br />
            <textarea name="body" rows="10" cols="80">@Model.Body</textarea>
            <input type="submit" name="submit" value="Submit!" />
</form>